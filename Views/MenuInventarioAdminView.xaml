<UserControl
    x:Class="RestaurantJapanese.Views.MenuInventarioAdminView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="using:RestaurantJapanese.Helpers">

    <!-- Conversor de moneda para la lista -->
    <UserControl.Resources>
        <helpers:CurrencyConverterHelper x:Key="CurrencyConverter"/>
        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource JpGradientBg}" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TÃ­tulo Principal de la PÃ¡gina -->
        <StackPanel Grid.Row="0" Spacing="16" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                <TextBlock Text="ðŸ£" FontSize="32" VerticalAlignment="Center"/>
                <TextBlock Text="Inventario de MenÃº" Style="{StaticResource JpPageTitle}"/>
                <TextBlock Text="ðŸ£" FontSize="32" VerticalAlignment="Center"/>
            </StackPanel>
            <Rectangle Style="{StaticResource JpSeparator}" Width="420" HorizontalAlignment="Center"/>
            <TextBlock Text="Administra platillos, descripciones, precios y disponibilidad"
                       Style="{StaticResource JpPageSubtitle}" HorizontalAlignment="Center"/>
            
            <!-- Navigation tabs -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                <RadioButton Content="Listar" IsChecked="{Binding IsListSelected, Mode=TwoWay}" GroupName="InventorySection"/>
                <RadioButton Content="Buscar por ID" IsChecked="{Binding IsSearchSelected, Mode=TwoWay}" GroupName="InventorySection"/>
                <RadioButton Content="Crear" IsChecked="{Binding IsCreateSelected, Mode=TwoWay}" GroupName="InventorySection"/>
                <RadioButton Content="Editar" IsChecked="{Binding IsUpdateSelected, Mode=TwoWay}" GroupName="InventorySection"/>
                <RadioButton Content="Dar de baja" IsChecked="{Binding IsDeleteSelected, Mode=TwoWay}" GroupName="InventorySection"/>
            </StackPanel>
        </StackPanel>

        <!-- Content sections -->
        <Grid Grid.Row="1">
            <!-- List section -->
            <StackPanel Visibility="{Binding ListVisibility}" Spacing="16">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <ToggleSwitch Header="Solo activos" IsOn="{Binding OnlyActive, Mode=TwoWay}"/>
                    <Button Content="Cargar productos" Command="{Binding LoadAllCommand}" Style="{StaticResource JpPrimaryButton}"/>
                </StackPanel>
                
                <Border Style="{StaticResource JpAdminCard}" Height="500">
                    <ListView ItemsSource="{Binding Items}" SelectedItem="{Binding Selected, Mode=TwoWay}" Style="{StaticResource JpListView}">
                        <ListView.Header>
                            <Grid Padding="8" Background="{StaticResource JpGoldBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ID" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" Text="Nombre" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="2" Text="DescripciÃ³n" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="3" Text="Precio" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="4" Text="Activo" Foreground="White" FontWeight="SemiBold"/>
                            </Grid>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8" BorderBrush="{StaticResource JpLineBrush}" BorderThickness="0,0,0,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding IdMenuItem}" VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" Text="{Binding Description}" VerticalAlignment="Center" 
                                               TextTrimming="CharacterEllipsis" Foreground="{StaticResource JpMutedBrush}"/>
                                    <TextBlock Grid.Column="3" Text="{Binding Price, Converter={StaticResource CurrencyConverter}}" VerticalAlignment="Center"/>
                                    <CheckBox Grid.Column="4" IsChecked="{Binding IsActive}" IsEnabled="False" HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </StackPanel>

            <!-- Search by ID section -->
            <StackPanel Visibility="{Binding SearchVisibility}" Spacing="16">
                <TextBlock Text="Buscar producto por ID" Style="{StaticResource JpCardTitle}"/>
                
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <TextBox PlaceholderText="Ingresa el ID del producto..." Text="{Binding Search, Mode=TwoWay}" Width="200" Style="{StaticResource JpTextBox}"/>
                    <ToggleSwitch Header="Solo activos" IsOn="{Binding OnlyActive, Mode=TwoWay}"/>
                    <Button Content="ðŸ” Buscar por ID" Command="{Binding SearchCommand}" Style="{StaticResource JpPrimaryButton}"/>
                </StackPanel>
                
                <Border Style="{StaticResource JpAdminCard}" Height="400">
                    <ScrollViewer>
                        <!-- Mostrar cuando hay datos -->
                        <StackPanel Spacing="16" Visibility="{Binding Selected, Converter={StaticResource StringToVisibilityConverter}}">
                            <TextBlock Text="Resultado de la bÃºsqueda:" FontWeight="SemiBold" FontSize="16"/>
                            <Border Background="{StaticResource JpSurfaceBrush}" 
                                    CornerRadius="{StaticResource JpRadiusM}" 
                                    Padding="16" 
                                    BorderBrush="{StaticResource JpLineBrush}" 
                                    BorderThickness="1">
                                <StackPanel Spacing="8">
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <TextBlock Text="ID:" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Selected.IdMenuItem}" FontWeight="Bold" Foreground="{StaticResource JpCrimsonBrush}"/>
                                        <TextBlock Text="â€¢" Foreground="{StaticResource JpMutedBrush}"/>
                                        <TextBlock Text="Estado:" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Selected.IsActive}" 
                                                   Foreground="{StaticResource JpBambooBrush}" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Selected.Name}" FontWeight="SemiBold" FontSize="18"/>
                                    <TextBlock Text="{Binding Selected.Description}" Foreground="{StaticResource JpMutedBrush}" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Selected.Price, Converter={StaticResource CurrencyConverter}}" 
                                               FontWeight="Bold" FontSize="16" Foreground="{StaticResource JpGoldBrush}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </StackPanel>

            <!-- Create section -->
            <StackPanel Visibility="{Binding CreateVisibility}" Spacing="16">
                <TextBlock Text="Crear nuevo producto" Style="{StaticResource JpCardTitle}"/>
                
                <Border Style="{StaticResource JpAdminCard}" Padding="20">
                    <StackPanel Spacing="12" MaxWidth="600">
                        <TextBox PlaceholderText="Nombre del producto *" Text="{Binding Name, Mode=TwoWay}" Style="{StaticResource JpTextBox}"/>
                        <TextBox PlaceholderText="DescripciÃ³n" Text="{Binding Description, Mode=TwoWay}" 
                                 Style="{StaticResource JpTextBox}" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                        <TextBox PlaceholderText="Precio (ej: 100.50) *" Text="{Binding PriceText, Mode=TwoWay}" 
                                 Style="{StaticResource JpTextBox}" InputScope="Number"/>
                        <CheckBox Content="Producto activo" IsChecked="{Binding IsActive, Mode=TwoWay}"/>
                    </StackPanel>
                </Border>
                
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button Content="Crear producto" Command="{Binding CreateCommand}" Style="{StaticResource JpPrimaryButton}" MinWidth="140"/>
                    <Button Content="Limpiar" Command="{Binding ClearCreateCommand}" Style="{StaticResource JpSecondaryButton}" MinWidth="100"/>
                </StackPanel>
            </StackPanel>

            <!-- Update section - Solo formulario -->
            <StackPanel Visibility="{Binding UpdateVisibility}" Spacing="16">
                <TextBlock Text="Editar producto" Style="{StaticResource JpCardTitle}"/>
                <TextBlock Text="Llena todos los campos del producto que deseas editar. El ID debe ser de un producto existente." 
                           FontSize="14" Foreground="{StaticResource JpMutedBrush}" TextWrapping="Wrap"/>
                
                <!-- Formulario de ediciÃ³n -->
                <Border Style="{StaticResource JpAdminCard}" Padding="20">
                    <StackPanel Spacing="12" MaxWidth="600">
                        <TextBox PlaceholderText="ID del producto *" Text="{Binding IdMenuItemText, Mode=TwoWay}" Style="{StaticResource JpTextBox}" InputScope="Number"/>
                        <TextBox PlaceholderText="Nombre del producto *" Text="{Binding Name, Mode=TwoWay}" Style="{StaticResource JpTextBox}"/>
                        <TextBox PlaceholderText="DescripciÃ³n" Text="{Binding Description, Mode=TwoWay}" 
                                 Style="{StaticResource JpTextBox}" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                        <TextBox PlaceholderText="Precio (ej: 100.50) *" Text="{Binding PriceText, Mode=TwoWay}" 
                                 Style="{StaticResource JpTextBox}" InputScope="Number"/>
                        <CheckBox Content="Producto activo" IsChecked="{Binding IsActive, Mode=TwoWay}"/>
                        
                        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,12,0,0">
                            <Button Content="ðŸ’¾ Guardar cambios" Command="{Binding SaveCommand}" Style="{StaticResource JpPrimaryButton}" MinWidth="140"/>
                            <Button Content="Limpiar formulario" Command="{Binding ClearCreateCommand}" Style="{StaticResource JpSecondaryButton}" MinWidth="140"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Delete section -->
            <StackPanel Visibility="{Binding DeleteVisibility}" Spacing="16">
                <TextBlock Text="Dar de baja producto" Style="{StaticResource JpCardTitle}"/>
                
                <Border Style="{StaticResource JpAdminCard}" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Ingresa el ID del producto que deseas dar de baja:" FontWeight="SemiBold"/>
                        
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBox PlaceholderText="ID del producto" Text="{Binding IdLookup, Mode=TwoWay}" Width="200" Style="{StaticResource JpTextBox}"/>
                            <Button Content="ðŸ” Buscar" Command="{Binding LoadByIdCommand}" Style="{StaticResource JpSecondaryButton}"/>
                            <Button Content="ðŸ—‘ï¸ Dar de baja directamente" Command="{Binding SoftDeleteCommand}" Style="{StaticResource JpPrimaryButton}" Background="DarkRed"/>
                        </StackPanel>
                        
                        <!-- Vista previa del producto encontrado -->
                        <Border Visibility="{Binding Selected, Converter={StaticResource StringToVisibilityConverter}}" 
                                Background="{StaticResource JpSurfaceBrush}" 
                                CornerRadius="{StaticResource JpRadiusM}" 
                                Padding="16" 
                                BorderBrush="{StaticResource JpLineBrush}" 
                                BorderThickness="1"
                                Margin="0,12,0,0">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Vista previa del producto:" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource JpMutedBrush}"/>
                                <TextBlock Text="{Binding Selected.Name}" FontWeight="SemiBold" FontSize="18"/>
                                <TextBlock Text="{Binding Selected.Description}" Foreground="{StaticResource JpMutedBrush}" TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <TextBlock>
                                        <Run Text="ID: " FontWeight="SemiBold"/>
                                        <Run Text="{Binding Selected.IdMenuItem}"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="Precio: " FontWeight="SemiBold"/>
                                        <Run Text="{Binding Selected.Price, Converter={StaticResource CurrencyConverter}}"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="Estado: " FontWeight="SemiBold"/>
                                        <Run Text="{Binding Selected.IsActive}" Foreground="{StaticResource JpBambooBrush}"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="âš ï¸ Nota: Al dar de baja un producto, se marcarÃ¡ como inactivo pero no se eliminarÃ¡ de la base de datos." 
                                   FontSize="12" Foreground="{StaticResource JpMutedBrush}" TextWrapping="Wrap" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Error display -->
            <Border Background="{StaticResource JpCrimsonBrush}" 
                    CornerRadius="8" 
                    Padding="12,8"
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Center" 
                    Visibility="{Binding Error, Converter={StaticResource StringToVisibilityConverter}}"
                    Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="âŒ" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Error}" 
                               Foreground="White" 
                               FontWeight="SemiBold"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

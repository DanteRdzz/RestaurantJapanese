<Page
    x:Class="RestaurantJapanese.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:RestaurantJapanese.ViewModels"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <Page.DataContext>
        <vm:LoginVM/>
    </Page.DataContext>

    <Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="380">
            <StackPanel Spacing="12">
                <TextBlock Text="Restaurant JP" FontSize="28" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                <TextBlock Text="Inicia sesión" Opacity="0.7" HorizontalAlignment="Center" Margin="0,0,0,8"/>

                <TextBox PlaceholderText="Usuario"
                         Text="{Binding UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- PasswordBox no expone Password para binding; se pasa por evento al VM -->
                <PasswordBox x:Name="Pwd" PasswordChanged="Pwd_PasswordChanged"/>

                <Button Content="Iniciar sesión" Click="Login_Click"/>

                <TextBlock Text="{Binding Error}" Foreground="IndianRed" TextWrapping="WrapWholeWords"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

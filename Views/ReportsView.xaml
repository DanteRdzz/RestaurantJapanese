<UserControl
    x:Class="RestaurantJapanese.Views.ReportsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="using:RestaurantJapanese.Helpers">

    <UserControl.Resources>
        <helpers:CurrencyConverterHelper x:Key="CurrencyConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource JpGradientBg}" Padding="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <StackPanel Grid.Row="0" Spacing="12" Margin="0,0,0,18">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                <TextBlock Text="ðŸ“Š" FontSize="28" VerticalAlignment="Center"/>
                <TextBlock Text="AnÃ¡lisis y Reportes" Style="{StaticResource JpTitle}"/>
                <TextBlock Text="ðŸ“Š" FontSize="28" VerticalAlignment="Center"/>
            </StackPanel>
            <Rectangle Style="{StaticResource JpSeparator}" Width="360" HorizontalAlignment="Center"/>
            <TextBlock Text="Ventas por dÃ­a, semana o mes segÃºn el rango elegido."
                       Style="{StaticResource JpSubtitle}" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Filtros -->
        <Border Grid.Row="1" Style="{StaticResource JpAdminCard}" Padding="16" Margin="0,0,0,16">
            <Grid ColumnSpacing="12" RowSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Desde:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <DatePicker Grid.Column="1"
                            SelectedDate="{Binding FromDate, Mode=TwoWay}"/>

                <TextBlock Grid.Column="2" Text="Hasta:" VerticalAlignment="Center" Margin="12,0,6,0"/>
                <DatePicker Grid.Column="3"
                            SelectedDate="{Binding ToDate, Mode=TwoWay}"/>

                <TextBlock Grid.Column="4" Text="Agrupar:" VerticalAlignment="Center" Margin="12,0,6,0"/>
                <ComboBox Grid.Column="5"
                          SelectedItem="{Binding GroupBy, Mode=TwoWay}"
                          Width="180">
                    <x:String>DAY</x:String>
                    <x:String>WEEK</x:String>
                    <x:String>MONTH</x:String>
                </ComboBox>

                <StackPanel Grid.Column="7" Orientation="Horizontal">
                    <Button Content="Cargar"
                            Style="{StaticResource JpPrimaryButton}"
                            Command="{Binding LoadCommand}"
                            Padding="16,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lista de resultados -->
        <Border Grid.Row="2" Style="{StaticResource JpAdminCard}">
            <ListView ItemsSource="{Binding Items}" Height="420" Style="{StaticResource JpListView}">
                <ListView.Header>
                    <Border Background="{StaticResource JpGoldBrush}" Padding="12,8" CornerRadius="8,8,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="PerÃ­odo" Foreground="White" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="Tickets" Foreground="White" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="2" Text="Subtotal" Foreground="White" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="3" Text="IVA" Foreground="White" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="4" Text="Propina" Foreground="White" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="5" Text="Total" Foreground="White" FontWeight="SemiBold"/>
                        </Grid>
                    </Border>
                </ListView.Header>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10,6" Background="Transparent" CornerRadius="{StaticResource JpRadiusS}" Margin="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Label}"/>
                                <TextBlock Grid.Column="1" Text="{Binding Tickets}"/>
                                <TextBlock Grid.Column="2" Text="{Binding Subtotal, Converter={StaticResource CurrencyConverter}}"/>
                                <TextBlock Grid.Column="3" Text="{Binding IVA, Converter={StaticResource CurrencyConverter}}"/>
                                <TextBlock Grid.Column="4" Text="{Binding Propina, Converter={StaticResource CurrencyConverter}}"/>
                                <TextBlock Grid.Column="5" Text="{Binding Total, Converter={StaticResource CurrencyConverter}}" FontWeight="SemiBold"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <!-- Totales -->
        <Border Grid.Row="3" Style="{StaticResource JpAdminCard}" Margin="0,16,0,0" Padding="12">
            <StackPanel Orientation="Horizontal" Spacing="24" HorizontalAlignment="Right">
                <StackPanel>
                    <TextBlock Text="Tickets" Foreground="{StaticResource JpMutedBrush}"/>
                    <TextBlock Text="{Binding TotalTickets}" FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Subtotal" Foreground="{StaticResource JpMutedBrush}"/>
                    <TextBlock Text="{Binding SumSubtotal, Converter={StaticResource CurrencyConverter}}" FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="IVA" Foreground="{StaticResource JpMutedBrush}"/>
                    <TextBlock Text="{Binding SumIVA, Converter={StaticResource CurrencyConverter}}" FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Propina" Foreground="{StaticResource JpMutedBrush}"/>
                    <TextBlock Text="{Binding SumPropina, Converter={StaticResource CurrencyConverter}}" FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="TOTAL" Foreground="{StaticResource JpCrimsonBrush}" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding SumTotal, Converter={StaticResource CurrencyConverter}}" FontWeight="Bold" Foreground="{StaticResource JpCrimsonBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

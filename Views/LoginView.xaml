<UserControl
    x:Class="RestaurantJapanese.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    HighContrastAdjustment="None">

    <!-- Fondo simple elegante -->
    <Grid Background="{StaticResource JpBgBrush}">
    
        <!-- Contenido centrado -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
 
            <!-- Tarjeta de login simple -->
      <Border Style="{StaticResource JpCard}" 
    Width="350" 
         MaxWidth="90vw">
        
     <StackPanel Spacing="20">
   
  <!-- Encabezado -->
       <StackPanel Spacing="8">
     <TextBlock Text="Restaurant JP" 
       Style="{StaticResource JpTitle}"
  FontSize="28"
       HorizontalAlignment="Center"/>
    
 <TextBlock Text="Iniciar Sesión" 
    Style="{StaticResource JpSubtitle}"
    HorizontalAlignment="Center"/>

         <Rectangle Height="1" 
             Width="120"
      Fill="{StaticResource JpGoldBrush}"
             HorizontalAlignment="Center"
    Margin="0,8,0,0"/>
    </StackPanel>

   <!-- Formulario -->
   <StackPanel Spacing="16">
     
         <!-- Campo Usuario -->
     <StackPanel Spacing="4">
   <TextBlock Text="Usuario" 
Foreground="{StaticResource JpTextBrush}"
   FontSize="14"
         FontWeight="Medium"/>
        <TextBox Style="{StaticResource JpTextBox}"
      Text="{Binding UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
         Padding="16,12"
           FontSize="14"/>
     </StackPanel>

   <!-- Campo Contraseña -->
   <StackPanel Spacing="4">
         <TextBlock Text="Contraseña" 
     Foreground="{StaticResource JpTextBrush}"
      FontSize="14"
    FontWeight="Medium"/>
     
   <!-- PasswordBox simple -->
      <PasswordBox x:Name="PwdBox"
             Style="{StaticResource JpPasswordBox}"
    Padding="16,12"
        FontSize="14"
      IsPasswordRevealButtonEnabled="True"
        PasswordRevealMode="Peek"/>
  </StackPanel>
            </StackPanel>

      <!-- Botón de login -->
       <Button Style="{StaticResource JpPrimaryButton}"
      Content="Iniciar sesión"
      Command="{Binding SignInCommand}"
  CommandParameter="{Binding ElementName=PwdBox, Path=Password}"
      Margin="0,8,0,0"
  Padding="24,12"
  FontSize="16"/>
   
 <!-- Mensaje de error -->
       <Border Background="{StaticResource JpCrimsonBrush}"
       CornerRadius="6"
       Padding="12,8"
  Visibility="{Binding Error, Converter={StaticResource NullToVisibilityConverter}}">
<TextBlock Text="{Binding Error}"
     Foreground="White"
     FontSize="13"
      TextWrapping="Wrap"
       HorizontalAlignment="Center"/>
    </Border>
       </StackPanel>
</Border>
 </Grid>
    </Grid>
</UserControl>
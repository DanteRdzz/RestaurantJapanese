<UserControl
    x:Class="RestaurantJapanese.Views.PosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="using:RestaurantJapanese.Helpers">

    <!-- Recursos -->
    <UserControl.Resources>
        <helpers:CurrencyConverterHelper x:Key="CurrencyConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource JpGradientBg}" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TÍTULO PRINCIPAL -->
        <StackPanel Grid.Row="0"
                    Spacing="12"
                    Margin="0,0,0,16"
                    HorizontalAlignment="Center">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="12">
                <!-- Sin emojis -->
                <TextBlock Text="Punto de Venta"
                           Style="{StaticResource JpPageTitle}"/>
            </StackPanel>

            <Rectangle Style="{StaticResource JpSeparator}"
                       Width="300"
                       HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal"
                        Spacing="16"
                        HorizontalAlignment="Center">
                <Border Background="{StaticResource JpSurfaceBrush}"
                        CornerRadius="{StaticResource JpRadiusM}"
                        Padding="12,8"
                        BorderBrush="{StaticResource JpGoldBrush}"
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="&#xE82F;"
                                   Style="{StaticResource JpIcon}"
                                   FontSize="16"/>
                        <TextBlock Text="Sistema de Ventas Activo"
                                   Foreground="{StaticResource JpBambooBrush}"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <!-- Botón Cargar menú más estándar -->
                <Button Content="Cargar menú"
                        Command="{Binding LoadMenuCommand}"
                        Style="{StaticResource JpPrimaryButton}"
                        Padding="16,6"
                        Height="32"
                        MinWidth="130"
                        ToolTipService.ToolTip="Cargar menú de productos"/>
            </StackPanel>
        </StackPanel>

        <!-- CONTENIDO: 2 columnas (menú + carrito) -->
        <Grid Grid.Row="1" ColumnSpacing="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.6*"/>
                <!-- Menú -->
                <ColumnDefinition Width="1.4*"/>
                <!-- Carrito -->
            </Grid.ColumnDefinitions>

            <!-- ========== IZQUIERDA: MENÚ ========== -->
            <Border Grid.Column="0"
                    Style="{StaticResource JpAdminCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="*"/>
                        <!-- Lista menú -->
                        <RowDefinition Height="Auto"/>
                        <!-- Cantidad + botón -->
                    </Grid.RowDefinitions>

                    <!-- Header menú -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                Spacing="12"
                                Margin="0,0,0,8">
                        <Button Style="{StaticResource JpRoundButton}"
                                Content="&#xE7C7;"
                                FontFamily="Segoe MDL2 Assets"
                                IsEnabled="False"
                                Width="32"
                                Height="32"/>
                        <TextBlock Text="Menú del Restaurante"
                                   Style="{StaticResource JpCardTitle}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Lista menú -->
                    <Border Grid.Row="1"
                            Background="{StaticResource JpSurfaceBrush}"
                            CornerRadius="{StaticResource JpRadiusM}"
                            BorderBrush="{StaticResource JpLineBrush}"
                            BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ListView ItemsSource="{Binding Menu}"
                                      SelectedItem="{Binding Selected, Mode=TwoWay}"
                                      Style="{StaticResource JpListView}"
                                      Background="Transparent">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="Transparent"
                                                Padding="16,12"
                                                CornerRadius="{StaticResource JpRadiusS}"
                                                Margin="4,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}"
                                                               FontWeight="SemiBold"
                                                               FontSize="16"
                                                               Foreground="{StaticResource JpTextBrush}"/>
                                                    <TextBlock Text="{Binding Description}"
                                                               Foreground="{StaticResource JpMutedBrush}"
                                                               TextWrapping="Wrap"
                                                               FontSize="14"
                                                               Margin="0,4,0,0"/>
                                                </StackPanel>

                                                <Border Grid.Column="1"
                                                        Background="{StaticResource JpGoldBrush}"
                                                        CornerRadius="15"
                                                        Padding="12,6"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Price, Converter={StaticResource CurrencyConverter}}"
                                                               Foreground="White"
                                                               FontWeight="SemiBold"
                                                               FontSize="14"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </Border>

                    <!-- Cantidad + Agregar -->
                    <Border Grid.Row="2"
                            Background="{StaticResource JpSurfaceBrush}"
                            CornerRadius="{StaticResource JpRadiusM}"
                            Padding="16"
                            Margin="0,8,0,0"
                            BorderBrush="{StaticResource JpLineBrush}"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="16"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Cantidad:"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource JpTextBrush}"/>

                            <NumberBox Width="120"
                                       Minimum="1"
                                       Value="{Binding Qty, Mode=TwoWay}"
                                       CornerRadius="{StaticResource JpRadiusS}"
                                       FontSize="16"/>

                            <Button Content="Agregar al carrito"
                                    Style="{StaticResource JpPrimaryButton}"
                                    Command="{Binding AddCommand}"
                                    Padding="16,6"
                                    Height="32"
                                    MinWidth="150"
                                    HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- ========== DERECHA: CARRITO + TOTALES ========== -->
            <Border Grid.Column="1"
                    Style="{StaticResource JpAdminCard}"
                    MinWidth="420">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header carrito -->
                        <RowDefinition Height="*"/>
                        <!-- Lista carrito -->
                        <RowDefinition Height="Auto"/>
                        <!-- Botones carrito -->
                        <RowDefinition Height="Auto"/>
                        <!-- Totales + checkout -->
                    </Grid.RowDefinitions>

                    <!-- Header carrito -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                Spacing="12"
                                Margin="0,0,0,8">
                        <Button Style="{StaticResource JpRoundButtonOrange}"
                                Content="&#xE7BF;"
                                FontFamily="Segoe MDL2 Assets"
                                IsEnabled="False"
                                Width="32"
                                Height="32"/>
                        <TextBlock Text="Carrito de compras"
                                   Style="{StaticResource JpCardTitle}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Lista carrito -->
                    <Border Grid.Row="1"
                            Background="{StaticResource JpSurfaceBrush}"
                            CornerRadius="{StaticResource JpRadiusM}"
                            BorderBrush="{StaticResource JpLineBrush}"
                            BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ListView ItemsSource="{Binding Cart}"
                                      SelectionMode="Single"
                                      Style="{StaticResource JpListView}"
                                      Background="Transparent">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="Transparent"
                                                Padding="12,8"
                                                CornerRadius="{StaticResource JpRadiusS}"
                                                Margin="2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{Binding Name}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource JpTextBrush}"
                                                           TextTrimming="CharacterEllipsis"/>

                                                <Border Grid.Column="1"
                                                        Background="{StaticResource JpBambooBrush}"
                                                        CornerRadius="10"
                                                        Padding="8,4"
                                                        Margin="8,0,0,0"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Qty}"
                                                               Foreground="White"
                                                               FontWeight="SemiBold"
                                                               FontSize="12"/>
                                                </Border>

                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding UnitPrice, Converter={StaticResource CurrencyConverter}}"
                                                           Margin="8,0,0,0"
                                                           Foreground="{StaticResource JpMutedBrush}"
                                                           FontSize="12"
                                                           VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="3"
                                                           Text="{Binding LineTotal, Converter={StaticResource CurrencyConverter}}"
                                                           Margin="8,0,0,0"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource JpTextBrush}"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </Border>

                    <!-- Botones carrito -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                Spacing="12"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Right">
                        <Button Content="Quitar seleccionado"
                                Command="{Binding RemoveCommand}"
                                Style="{StaticResource JpSecondaryButton}"
                                Padding="12,6"
                                Height="32"
                                MinWidth="150"/>

                        <Button Content="Limpiar carrito"
                                Command="{Binding ClearCommand}"
                                Style="{StaticResource JpPrimaryButton}"
                                Padding="12,6"
                                Height="32"
                                MinWidth="140"/>
                    </StackPanel>

                    <!-- Totales + Checkout -->
                    <Border Grid.Row="3"
                            Margin="0,10,0,0"
                            Background="{StaticResource JpSurfaceBrush}"
                            CornerRadius="{StaticResource JpRadiusM}"
                            Padding="14"
                            BorderBrush="{StaticResource JpLineBrush}"
                            BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Totales -->
                            <StackPanel Grid.Row="0"
                                        Grid.ColumnSpan="2"
                                        Orientation="Horizontal"
                                        Spacing="20">
                                <StackPanel>
                                    <TextBlock Text="Subtotal"
                                               Foreground="{StaticResource JpMutedBrush}"
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding Subtotal, Converter={StaticResource CurrencyConverter}}"
                                               FontWeight="SemiBold"
                                               FontSize="16"
                                               Foreground="{StaticResource JpTextBrush}"/>
                                </StackPanel>

                                <StackPanel>
                                    <TextBlock Text="IVA (16%)"
                                               Foreground="{StaticResource JpMutedBrush}"
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding Tax, Converter={StaticResource CurrencyConverter}}"
                                               FontWeight="SemiBold"
                                               FontSize="16"
                                               Foreground="{StaticResource JpTextBrush}"/>
                                </StackPanel>

                                <StackPanel>
                                    <TextBlock Text="TOTAL"
                                               Foreground="{StaticResource JpCrimsonBrush}"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Total, Converter={StaticResource CurrencyConverter}}"
                                               FontWeight="Bold"
                                               FontSize="20"
                                               Foreground="{StaticResource JpCrimsonBrush}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Botón procesar -->
                            <Button Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Content="Procesar venta"
                                    Style="{StaticResource JpPrimaryButton}"
                                    Command="{Binding CheckoutCommand}"
                                    Padding="14,6"
                                    Height="34"
                                    MinWidth="170"
                                    FontSize="14"
                                    HorizontalAlignment="Center"
                                    Margin="0,10,0,0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>

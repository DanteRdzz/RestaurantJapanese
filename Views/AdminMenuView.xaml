<UserControl
    x:Class="RestaurantJapanese.Views.AdminMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{StaticResource JpBgBrush}" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <StackPanel Grid.Row="0" Spacing="4" Margin="0,0,0,16">
            <TextBlock Text="Panel de Administración" Style="{StaticResource JpTitle}" />
            <TextBlock Text="Configura tu restaurante: personas, productos, inventario y reportes."
                       Style="{StaticResource JpSubtitle}"/>
        </StackPanel>

        <!-- Tarjetas de acciones -->
        <Grid Grid.Row="1" ColumnSpacing="16" RowSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Empleados -->
            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource JpCard}">
                <StackPanel Spacing="10">
                    <TextBlock Text="Gestión de Empleados" FontSize="18" FontWeight="SemiBold" />
                    <TextBlock Text="Altas, bajas, edición de datos y roles (admin / empleado)."
                               Foreground="{StaticResource JpMutedBrush}"/>
                    <Button Style="{StaticResource JpPrimaryButton}"
                            Content="Abrir"
                            Command="{Binding OpenEmployeesCommand}"/>
                </StackPanel>
            </Border>

            <!-- Productos (deshabilitado) -->
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource JpCard}">
                <StackPanel Spacing="10">
                    <TextBlock Text="Gestión de Productos" FontSize="18" FontWeight="SemiBold" />
                    <TextBlock Text="Platillos, precios, activación/desactivación y categorías."
                               Foreground="{StaticResource JpMutedBrush}"/>
                    <Button Style="{StaticResource JpPrimaryButton}"
                            Content="Abrir"
                            IsEnabled="False">
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Módulo pendiente" />
                        </ToolTipService.ToolTip>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Reporte de ventas (deshabilitado) -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource JpCard}">
                <StackPanel Spacing="10">
                    <TextBlock Text="Reporte de Ventas" FontSize="18" FontWeight="SemiBold" />
                    <TextBlock Text="Ventas por fecha, ticket promedio, top platillos, propinas."
                               Foreground="{StaticResource JpMutedBrush}"/>
                    <Button Style="{StaticResource JpPrimaryButton}"
                            Content="Abrir"
                            IsEnabled="False">
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Módulo pendiente" />
                        </ToolTipService.ToolTip>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Inventario & Proveedores (deshabilitado) -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource JpCard}">
                <StackPanel Spacing="10">
                    <TextBlock Text="Inventario y Proveedores" FontSize="18" FontWeight="SemiBold" />
                    <TextBlock Text="Existencias, compras y proveedores. (Ideal para cocina)"
                               Foreground="{StaticResource JpMutedBrush}"/>
                    <Button Style="{StaticResource JpPrimaryButton}"
                            Content="Abrir"
                            IsEnabled="False">
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Módulo pendiente" />
                        </ToolTipService.ToolTip>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== Paleta (temática Japón) ===== -->
    <Color x:Key="JpSakuraPink">#FFF8E9</Color>
    <Color x:Key="JpOffWhite">#FFFDF9</Color>
    <Color x:Key="JpCharcoal">#1E1E1E</Color>
    <Color x:Key="JpGray">#6E6E6E</Color>
    <Color x:Key="JpCrimson">#C0002A</Color>
    <Color x:Key="JpCrimsonDark">#990020</Color>
    <Color x:Key="JpInk">#101014</Color>
    <Color x:Key="JpLine">#FFE8DF</Color>

    <SolidColorBrush x:Key="JpBgBrush" Color="{StaticResource JpSakuraPink}"/>
    <SolidColorBrush x:Key="JpSurfaceBrush" Color="{StaticResource JpOffWhite}"/>
    <SolidColorBrush x:Key="JpTextBrush" Color="{StaticResource JpInk}"/>
    <SolidColorBrush x:Key="JpMutedBrush" Color="{StaticResource JpGray}"/>
    <SolidColorBrush x:Key="JpCrimsonBrush" Color="{StaticResource JpCrimson}"/>
    <SolidColorBrush x:Key="JpCrimsonDarkBrush" Color="{StaticResource JpCrimsonDark}"/>
    <SolidColorBrush x:Key="JpLineBrush" Color="{StaticResource JpLine}"/>

    <x:Double x:Key="JpRadiusXL">16</x:Double>
    <x:Double x:Key="JpRadiusL">12</x:Double>
    <x:Double x:Key="JpRadiusM">8</x:Double>

    <!-- ===== Tipografía ===== -->
    <Style x:Key="JpTitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource JpTextBrush}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <Style x:Key="JpSubtitle" TargetType="TextBlock" BasedOn="{StaticResource JpTitle}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource JpMutedBrush}"/>
    </Style>

    <Style x:Key="JpErrorText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource JpCrimsonBrush}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- ===== Card (sin efectos WPF) ===== -->
    <Style x:Key="JpCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource JpSurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource JpRadiusXL}"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="BorderBrush" Value="{StaticResource JpLineBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- ===== Inputs ===== -->
    <Style x:Key="JpTextBox" TargetType="TextBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource JpTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource JpLineBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource JpRadiusM}"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Background" Value="{StaticResource JpSurfaceBrush}"/>
    </Style>

    <Style x:Key="JpPasswordBox" TargetType="PasswordBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource JpTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource JpLineBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource JpRadiusM}"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Background" Value="{StaticResource JpSurfaceBrush}"/>
        <Setter Property="IsPasswordRevealButtonEnabled" Value="True"/>
        <Setter Property="PasswordRevealMode" Value="Peek"/>
    </Style>

    <!-- ===== Botón primario (WinUI 3 correcto) ===== -->
    <Style x:Key="JpPrimaryButton" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="{StaticResource JpCrimsonBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="CornerRadius" Value="{StaticResource JpRadiusM}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="Root"
                    Background="{TemplateBinding Background}"
                    CornerRadius="{TemplateBinding CornerRadius}">
                            <ContentPresenter
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Content="{TemplateBinding Content}"/>
                        </Border>

                        <!-- Visual states dentro del Grid -->
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="Root.Background" Value="{StaticResource JpCrimsonDarkBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="Root.Background" Value="{StaticResource JpCrimsonDarkBrush}"/>
                                        <Setter Target="Root.Opacity" Value="0.9"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="Root.Opacity" Value="0.55"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== ContentDialog ===== -->
    <Style TargetType="ContentDialog">
        <Setter Property="Foreground" Value="{StaticResource JpTextBrush}"/>
        <Setter Property="Background" Value="{StaticResource JpSurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource JpRadiusL}"/>
    </Style>

</ResourceDictionary>
